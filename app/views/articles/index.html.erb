<h1>Courses List</h1>

  <%= form_tag articles_path, method:"get"  do%>
  Course<%= text_field_tag :course %>
  Teacher<%= text_field_tag :teacher %>
  Time<%= text_field_tag :time %>
  <%= submit_tag  "Search"%>
  <% end %>

</br>

<%= link_to 'Add Course', new_article_path %>
 
<table>
  <tr>
    <th>Course</th>
    <th>Teacher</th>
    <th>Time</th>
    <th colspan="3"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.course %></td>
      <td><%= article.teacher %></td>
      <td><%= article.time %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
      <td><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>